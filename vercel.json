{
  "version": 2,
  "builds": [
    { "src": "studybud/api/*.py", "use": "@vercel/python" },
    { "src": "studybud/frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "studybud/api/index.py" },
    { "src": "/(.*)", "dest": "studybud/frontend/public/$1", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" } }
  ]
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
